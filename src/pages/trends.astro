---
import MainLayout from '~/layouts/MainLayout.astro';
import TrendList from '~/components/TrendList.astro';
import { getAllTrends, type TrendsData } from '~/lib/trends';

export const prerender = false;

let allTrends: TrendsData = {};
let error: string | null = null;

try {
  allTrends = await getAllTrends();
} catch (e) {
  console.error('Failed to load trends:', e);
  error = 'Unable to load trends at this time.';
}
---
<MainLayout title="Genetius - Trends">
  <div class="max-w-6xl mx-auto p-6">
    <header class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-2">
        Research Trends
      </h1>
      <p class="text-gray-600 dark:text-gray-400">
        Topic trends and paper types from plant biology research
      </p>
      <nav class="mt-4">
        <a href="/" class="text-blue-600 dark:text-blue-400 hover:underline">
          Back to Papers
        </a>
      </nav>
    </header>

    <main class="space-y-8">
      {error ? (
        <div class="bg-red-50 dark:bg-red-900/20 text-red-700 dark:text-red-300 p-4 rounded-lg text-center">
          <p class="font-semibold">⚠️ {error}</p>
          <p class="text-sm mt-1">Please check your database connection or try again later.</p>
        </div>
      ) : Object.keys(allTrends).length > 0 ? (
        <>
          {allTrends.day && <TrendList trends={allTrends.day} />}
          {allTrends.week && <TrendList trends={allTrends.week} />}
          {allTrends.month && <TrendList trends={allTrends.month} />}
          {allTrends.year && <TrendList trends={allTrends.year} />}
        </>
      ) : (
        <div class="text-center py-12">
          <p class="text-gray-500 dark:text-gray-400 text-lg">
            No trend data available yet. Check back later!
          </p>
        </div>
      )}
    </main>
  </div>
</MainLayout>
