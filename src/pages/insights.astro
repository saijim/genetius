---
import Layout from '~/layouts/MainLayout.astro';
import { getInsights } from '~/lib/insights';

export const prerender = false;

let insights;
let error;

try {
  insights = await getInsights();
} catch (e) {
  console.error('Failed to load insights:', e);
  error = 'Unable to load insights at this time.';
}

const { momentum = [], network = [], methods = [], clusters = [] } = insights || {};
---

<Layout title="Research Insights">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-8">Research Insights</h1>

    {error && (
      <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-8">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-red-700">{error}</p>
          </div>
        </div>
      </div>
    )}

    {!error && (
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {/* Momentum Section */}
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
            <span class="mr-2">ðŸš€</span> Topic Momentum
          </h2>
          <p class="text-sm text-gray-500 mb-4">Keywords surging in the last 30 days relative to the previous 6 months.</p>
          <div class="space-y-3">
            {momentum.length === 0 ? <p class="text-gray-400 italic">Not enough data yet.</p> : momentum.map((m) => (
              <div class="flex items-center justify-between border-b border-gray-100 pb-2 last:border-0">
                <span class="font-medium text-gray-700">{m.keyword}</span>
                <span class="text-sm px-2 py-1 bg-green-100 text-green-800 rounded-full">
                  +{m.momentum.toFixed(1)}x
                </span>
              </div>
            ))}
          </div>
        </div>

        {/* Methods Section */}
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
            <span class="mr-2">ðŸ”¬</span> Top Methods
          </h2>
          <p class="text-sm text-gray-500 mb-4">Most frequently cited techniques and methods in recent papers.</p>
          <div class="space-y-3">
             {methods.length === 0 ? <p class="text-gray-400 italic">Not enough data yet.</p> : methods.map((m) => (
              <div class="flex items-center justify-between border-b border-gray-100 pb-2 last:border-0">
                <span class="font-medium text-gray-700">{m.method}</span>
                <span class="text-sm text-gray-500">{m.count} papers</span>
              </div>
            ))}
          </div>
        </div>

        {/* Clusters Section */}
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
            <span class="mr-2">ðŸ”—</span> Topic Clusters
          </h2>
          <p class="text-sm text-gray-500 mb-4">Keywords that frequently appear together.</p>
          <div class="flex flex-wrap gap-2">
            {clusters.length === 0 ? <p class="text-gray-400 italic">Not enough data yet.</p> : clusters.map((c) => (
              <span class="inline-flex items-center px-3 py-1 rounded-md text-sm font-medium bg-blue-50 text-blue-700 border border-blue-100">
                {c.keyword1} + {c.keyword2}
              </span>
            ))}
          </div>
        </div>

        {/* Network Section */}
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
            <span class="mr-2">ðŸ‘¥</span> Collaborations
          </h2>
          <p class="text-sm text-gray-500 mb-4">Frequent author collaborations.</p>
          <div class="space-y-3">
            {network.length === 0 ? <p class="text-gray-400 italic">Not enough data yet.</p> : network.map((n) => (
              <div class="flex items-center justify-between border-b border-gray-100 pb-2 last:border-0">
                <div class="text-sm text-gray-700">
                  <span class="font-medium">{n.author1}</span> & <span class="font-medium">{n.author2}</span>
                </div>
                <span class="text-xs text-gray-400">{n.weight} papers</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    )}
  </div>
</Layout>
